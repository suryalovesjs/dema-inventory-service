generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Inventory {
    productId   String @id
    name        String
    quantity    Int
    category    String
    subCategory String
    orders      Order[]
}

model Order {
    id        Int      @id @default(autoincrement())
    orderId      String
    product      Inventory? @relation(fields: [productId], references: [productId]) 
    productId    String 
    currency     String
    quantity     Int
    shippingCost Float
    amount       Float
    channel      String
    channelGroup String
    campaign     String
    dateTime     DateTime
}
